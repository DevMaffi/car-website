// HEADER
header.header#header(data-blur-target)

  // NAV CONTAINER
  nav.nav.container
    a.nav__logo(href="#")
      +logo

    // NAV MENU
    .nav__menu#nav-menu
      ul.nav__list
        each link, i in navLinks
          li.nav__item
            a(class=`nav__link ${i === 0 ? "active-link" : ""}` href=`#${link.toLowerCase()}`)= link

      .nav__close#nav-close
        i.ri-close-line

    .nav__toggle#nav-toggle
      i.ri-menu-line
